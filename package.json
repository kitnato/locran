{
  "name": "@kitnato/locran",
  "version": "0.11.0",
  "description": "Location, creature, artifact & monster name string generation for an irreverent fantasy setting.",
  "author": "kitnato",
  "main": "build/index.js",
  "module": "build/index.js",
  "type": "module",
  "license": "cc-by-sa-4.0",
  "homepage": "https://kitnato.github.io/locran",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitnato/locran.git"
  },
  "bugs": {
    "url": "https://github.com/kitnato/locran/issues"
  },
  "keywords": [
    "absurd",
    "game",
    "fantasy",
    "name",
    "generator",
    "satire"
  ],
  "dependencies": {
    "pluralize": "8.0.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@kitnato/eslint-config-succinct": "2.1.0",
    "@types/node": "20.11.13",
    "@types/pluralize": "0.0.33",
    "eslint": "8.56.0",
    "husky": "9.0.7",
    "lint-staged": "15.2.1",
    "prettier": "3.2.4",
    "ts-patch": "3.1.2",
    "typescript-transform-paths": "3.4.6"
  },
  "lint-staged": {
    "*.{json,md}": [
      "npm run lint-format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run lint-format"
    ]
  },
  "files": [
    "assets",
    "build"
  ],
  "scripts": {
    "prepublish": "tspc",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-format": "prettier --write .",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  }
}
